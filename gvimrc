" Color Scheme
colorscheme stereokai

" Font
set guifont=Fira\ Mono\ for\ Powerline:h14

" Remove Scrollbars
set guioptions-=r
set guioptions-=L

" Remove highlighted background from tabs
hi SpecialKey guibg=#212121

"Set tab width
set tabstop=2
set softtabstop=0
set expandtab
set shiftwidth=2
set smarttab

" Set mapleader to ,
let mapleader=","

"Remove highligting of tabs, spaces, ...
hi Normal ctermbg=none
highlight NonText ctermbg=none
highlight SpecialKey ctermbg=none
